<!-- 使用変数 board: 指定のBoard, request: 指定のBoardUser, btn_name: ボタンの表記 -->
<div class="request-board-user">
	<div class="container">
		<div class="row">
			<div class="item col-md-offset-3 col-md-6">
				<h3><%= community.name %></h3>

				<%= form_for request, url: community_community_users_path do |f| %>
					<%= f.text_area :comment, class: 'comment-form' %>

					<!-- 編集画面のみに表示 -->
					<% action = controller.action_name %>
					<% if action == "edit" || action == "update" %>
						<%= link_to '削除', community_community_user_path(community.id, request.id), method: :delete, class: "delete-btn" %>
					<% end %>

					<%= f.submit "#{btn_name}", class: "submit-btn" %>
				<% end %>
			</div>
		</div>
	</div>
</div>