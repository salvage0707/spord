<!-- 使用変数 board: 指定のBoard, request: 指定のBoardUser, btn_name: ボタンの表記 -->
<div class="request-board-user">
	<div class="container">
		<div class="row">
			<div class="item col-md-offset-3 col-md-6">
				<h3><%= board.name %></h3>

				<%= form_for request, url: board_board_users_path do |f| %>
					<%= f.text_area :comment, class: 'comment-form' %>

					<%= f.submit "#{btn_name}", class: "submit-btn" %>
					<!-- 編集画面のみに表示 -->
					<% if controller.action_name == "edit" %>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>