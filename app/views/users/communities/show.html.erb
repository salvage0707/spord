<!-- 画面上部の大きい画像 -->
<div>
	<div class="big-bg-iamge" style="background-image: url(<%= community_image_url(@community) %>)"></div>
</div>

<div class="community-detail-content">
	<div class="container">
		<div class="row">
			<!-- 画像を表示 -->
			<div class="clearfix community-first-box">

				<div class="col-md-7">
					<h4>
						<%= @community.name %>
					</h4>


					<p class="tags-label">目的</p>
					<ul class="tags clearfix">
						<% @community.purposes.each do |p|  %>
							<li class="purpose_tag">
								<%= p.name %>
							</li>
						<% end %>
					</ul>

					<p class="tags-label">対象</p>
					<ul class="tags clearfix">
						<% @community.ranks.each do |r|  %>
							<li class="rank_tag">
								<%= r.name %>
							</li>
						<% end %>
					</ul>

					<ul class="details-table">
						<!-- ジャンル -->
						<%= detail_list "ジャンル", @community.sport.name %>
						<!-- 応募資格 -->
						<%= detail_list "応募資格", "楽しくスポーツしたああああああああああい人！" %>
						<!-- 区域 -->
						<%= detail_list "区域", @community.area.name + "  " + @community.city.to_s %>
						<!-- 場所 -->
						<%= detail_list "場所", @community.place %>
						<!-- 日時 -->
						<%= detail_list "日時", @community.active_date %>
						<!-- 人数 -->
						<%= detail_list "人数", "#{@community.good_users.count}  /  #{@community.max_people}"  %>
						<!-- 作成者 -->
						<% input = link_to @community.manager_user.nickname, user_path(@community.manager_user.id) %>
						<%= detail_list "作成者", input %>
					</ul>
					<!-- 募集紹介ぶん -->
					<div class="details-text">
						<p>
							<%= @community.introduction %>
						</p>
					</div>
				</div>

				<!-- 申請などの一覧 -->
				<div class="requests col-md-5">
					<div class="item-box">
						<!-- 作成者のみに制限 -->
						<% if @community.manager_user == current_user && user_signed_in? %>
							<%= link_to "コミュニティを編集", edit_community_path(@community.id), class: "item" %>
							<%= link_to "申請一覧", community_community_users_path(community_id: @community.id), class: "item" %>
							<%= link_to "拒否申請一覧", community_community_rejects_path(community_id: @community.id), class: "item" %>
							<%= link_to "許可申請一覧", community_community_admits_path(community_id: @community.id), class: "item" %>
						<% end %>

						<!-- 作成者以外 -->
						<!-- 申請を出していない場合 -->
						<% if @request == nil &&  @community.manager_user != current_user %>
							<%= link_to "参加申請", new_community_community_user_path(community_id: @community.id), class: "item" %>
						<!-- 申請中の場合 -->
						<% elsif @request && @request.approval == nil %>
							<%= link_to "申請取り消し", edit_community_community_user_path(community_id: @community.id, id: @request.id), class: "item" %>
						<!-- 申請が許可されている場合 -->
						<% elsif @request && @request.approval == true && @community.manager_user != current_user%>
							<%= link_to "コミュニティから抜ける", community_community_user_path(community_id: @community.id, id: @request.id), method: :delete,  class: "item" %>
						<% elsif @request && @request.approval == false  %>
							<p class="item rejecting">申請が拒否されています</p>
						<% else %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>